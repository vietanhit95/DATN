
@model List<ADS.APP.Models.Staff>
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ADS/Admin.js"></script>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Trang chủ</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Quản lý nhân viên</span>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered" id="div">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Quản lý nhân viên</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                @*<button id="sample_editable_1_new" class="btn sbold green">
                                        thêm mới
                                        <i class="fa fa-plus"></i>
                                    </button>*@
                                <a class="btn sbold green" onclick="Admin.StaffCreate()">
                                    Thêm mới <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div id="sample_3_filter" class="dataTables_filter pull-right">
                                <label>
                                    Tìm kiếm: <input type="search" class="form-control input-sm input-small input-inline" placeholder="" aria-controls="sample_3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer" id="table_staff" role="grid" aria-describedby="sample_1_info">
                            <thead>
                                <tr>
                                    <td class="w20 text-center">
                                        STT
                                    </td>
                                    <td class="w120 text-center">
                                        Họ và tên
                                    </td>
                                    <td class="w150 text-center">
                                        Địa chỉ
                                    </td>
                                    <td class="w150 text-center">
                                        Tên đăng nhập
                                    </td>
                                    <td class="w150 text-center">
                                        Trạng thái
                                    </td>
                                    <td class="text-center">..</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        var item = Model[i];
                                        <tr>
                                            <td class="text-center">@((i + 1).ToString("0"))</td>
                                            <td class="text-center">@item.FullName</td>
                                            <td class="text-center">@item.Address</td>
                                            <td class="text-center">@item.UserName</td>
                                            @if (item.Status == "Y")
                                            {
                                                <td class="text-center"><label class="label label-primary">Hoạt Động</label></td>
                                            }
                                            else
                                            {
                                                <td class="text-center"><label class="label label-warning">Bị khóa</label></td>
                                            }
                                            <td>
                                                <a href="javascript:void(0)" onclick="Admin.DeleteStaff(@item.Id)" class="btn btn-danger btn-xs" title="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                                <a href="javascript:void(0)" onclick="Admin.EditStaff(@item.Id)" class="btn btn-success btn-xs" title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr><td colspan="6" class="text-center">Không tìm thấy dữ liệu</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


