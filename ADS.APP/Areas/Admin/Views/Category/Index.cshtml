@model List<ADS.APP.Models.Category>
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Trang chủ</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Quản lý danh mục</span>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Quản lý khách hàng</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                @*<button id="sample_editable_1_new" class="btn sbold green">
                                        thêm mới
                                        <i class="fa fa-plus"></i>
                                    </button>*@
                                <a class="btn sbold green" onclick="Category.ViewCreate()">
                                    Thêm mới <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div id="sample_3_filter" class="dataTables_filter pull-right">
                                <label>
                                    Tìm kiếm: <input type="search" class="form-control input-sm input-small input-inline" placeholder="" aria-controls="sample_3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer" id="sample_1" role="grid" aria-describedby="sample_1_info">
                            <thead>
                                @*<tr role="row">
                                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 66px;">
                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes">
                                                <span></span>
                                            </label>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label=" Username : activate to sort column descending" style="width: 146px;"> Username </th>
                                        <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" Email : activate to sort column ascending" style="width: 222px;"> Email </th>
                                        <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" Status : activate to sort column ascending" style="width: 106px;"> Status </th>
                                        <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" Joined : activate to sort column ascending" style="width: 111px;"> Joined </th>
                                        <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" Actions : activate to sort column ascending" style="width: 114px;"> Actions </th>
                                    </tr>*@
                                <tr>
                                    <td class="w20 text-center">
                                        STT
                                    </td>
                                    <td class="w120 text-center">
                                        Tên danh mục
                                    </td>
                                    <td class="w150 text-center">
                                        Trạng thái
                                    </td>
                                    <td class="w80 text-center">
                                        Thứ tự danh mục
                                    </td>
                                    <td class="text-center">..</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        var item = Model[i];
                                        <tr>
                                            <td class="text-center">@((i + 1).ToString("0"))</td>
                                            <td class="text-center">@item.Name</td>
                                            @if (@item.Status == "Y")
                                            {
                                                <td class="text-center"><label class="label label-primary">Hoạt Động</label></td>
                                            }
                                            else
                                            {
                                                <td class="text-center"><label class="label label-warning">Bị khóa</label></td>
                                            }

                                            <td class="text-center">@("DM" + item.CategoryId.ToString())</td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-danger btn-xs" title="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                                <a href="javascript:void(0)" class="btn btn-success btn-xs" title="Delete"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

